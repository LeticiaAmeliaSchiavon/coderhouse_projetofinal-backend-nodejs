<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>

    <header class="header">
      <nav class="nav">
        <a href="/" class="logo">Projeto Final</a>

        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          {{#if user}}
            <li><a href="/perfil">Perfil</a></li>
            {{#if (eq user.role "admin")}}
              <li><a href="/admin">Admin</a></li>
            {{/if}}
            <li><a href="/auth/logout">Sair</a></li>
          {{else}}
            <li><a href="/login">Login</a></li>
          {{/if}}
        </ul>
      </nav>
    </header>

    <main class="main-content">
      {{{body}}}
    </main>

    <footer class="footer">
      <p>&copy; {{formatDate}} - Projeto Backend Coderhouse</p>
    </footer>

  </body>
</html>